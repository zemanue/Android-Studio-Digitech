<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EstiloTexto">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EstiloTitulo" parent="EstiloTexto">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstiloSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/gray</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_light</item>
    </style>

    <style name="BottomNavigationItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>